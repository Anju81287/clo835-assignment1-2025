name: Build and Push Docker Images to ECR

on:
  push:
    branches: [ master ]

jobs:
  build-and-push: IMAGE
    runs-on: ubuntu-latest

    env:
      AWS_REGION: us-east-1
      IMAGE_TAG: latest
      ECR_REPOSITORY_WEBAPP: webapp
      ECR_REPOSITORY_MYSQL: mysql

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v3
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ env.AWS_REGION }}

      - name: Login to Amazon ECR
        id: login-ecr
        uses: aws-actions/amazon-ecr-login@v2

      - name: Build and Push Web App Image
        run: |
          docker build -t $ECR_REPOSITORY_WEBAPP:$IMAGE_TAG -f Dockerfile .
          docker tag $ECR_REPOSITORY_WEBAPP:$IMAGE_TAG ${{ steps.login-ecr.outputs.registry }}/$ECR_REPOSITORY_WEBAPP:$IMAGE_TAG
          docker push ${{ steps.login-ecr.outputs.registry }}/$ECR_REPOSITORY_WEBAPP:$IMAGE_TAG

      - name: Build and Push MySQL Image
        run: |
          docker build -t $ECR_REPOSITORY_MYSQL:$IMAGE_TAG -f Dockerfile_mysql .
          docker tag $ECR_REPOSITORY_MYSQL:$IMAGE_TAG ${{ steps.login-ecr.outputs.registry }}/$ECR_REPOSITORY_MYSQL:$IMAGE_TAG
          docker push ${{ steps.login-ecr.outputs.registry }}/$ECR_REPOSITORY_MYSQL:$IMAGE_TAG
